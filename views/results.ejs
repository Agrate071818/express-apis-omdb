<% // Render your search results here %>
<% // This is how to do comments in EJS, by the way... %>

<h2>Results for <%= input %></h2>

<% movie.Search.forEach(movie => { %>
    <div>
    <a href="/movies/<%= movie.imdbID %>">
        <p><%= movie.Title %> (<%= movie.Year %>)</p>
        <img src="<%= movie.Poster %>" alt="Poster from <%= movie.Title %>">
    </a>
</div>
<% }) %>

<style>
    img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
    div{
        display: inline-block;
        max-width: 350px;
    }
</style>